<p style="color: green"><%= notice %></p>

<h1>Welcome 
<span> 
	<%= @user.name.capitalize %>
</span>
</h1>

<%= link_to "Logout" , '/logout' %>

<div id="tweets">
  <% @tweets.each do |tweet| %>
